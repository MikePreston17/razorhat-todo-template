@model string
@{
    string scrape_url = @Model;
}

<div 
    class="flex flex-col items-center justify-center">
    <div class="flex flex-center hero min-h-screen bg-base-200">
        <div class="hero-content flex-col lg:flex-row-reverse">
            <div>
                <h1 x-text="message" class="text-5xl font-bold">???</h1>
                <p class="py-6">Please provide a Facebook URL you'd like to save</p>
                <div>
                    <input type="text" x-model="url">
                    Searching for: <span x-text="url"></span>
                    <a x-show='!!url' target="_blank"  >
                        <button x-on:click="save_me('@scrape_url')" class="btn btn-primary">Save!</button>
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>
  