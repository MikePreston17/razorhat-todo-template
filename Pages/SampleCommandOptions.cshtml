@model dynamic

<div class="flex flex-col">

    <div
        x-data="{
            open: 'true'
            , card_options: {
                'Job Queue': {enabled: true, icon: 'certificate.svg', page: 'Jobs'},
                'Settings': {enabled: true, icon: 'cog.svg', page: 'Settings'},
            }
        }"
        class="m-2 join join-vertical justify-center flex flex-col">

        <template x-cloak x-for="[key, value] of Object.entries(card_options)">

            <button
                x-show="true"
                x-on:click="card_options[key]=!value"
                class="m-1 btn btn-primary join-item shadow-md shadow-secondary-400/50">
                <img class="sm:w-4" :src="'/img/' + value.icon  " alt="">
                <label
                    x-text="key"
                    :asp-for='key'>
                </label>

                @* <input x-bind:name='key' *@
                @*        x-bind:value='value.enabled' *@
                @*        x-bind:checked="value.enabled" *@
                @*        type="checkbox" *@
                @*        :asp-for="key" *@
                @*        class="form-control toggle toggle-primary"> *@


            </button>


        </template>


    </div>


</div>